<Window x:Class="MatchGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Find all of the matching animals" Height="450" Width="400">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="1" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="1" Grid.Row="0" Text="2" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="2" Grid.Row="0" Text="3" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="3" Grid.Row="0" Text="4" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="0" Grid.Row="1" Text="5" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="1" Grid.Row="1" Text="6" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="2" Grid.Row="1" Text="7" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="3" Grid.Row="1" Text="8" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="0" Grid.Row="2" Text="9" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="1" Grid.Row="2" Text="10" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="2" Grid.Row="2" Text="11" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="3" Grid.Row="2" Text="12" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="0" Grid.Row="3" Text="13" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="1" Grid.Row="3" Text="14" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="2" Grid.Row="3" Text="15" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock Grid.Column="3" Grid.Row="3" Text="16" FontSize="36" HorizontalAlignment="Center"
                   VerticalAlignment="Center" MouseDown="TextBlock_MouseDown" />
        <TextBlock x:Name="TimeTextBlock" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Text="Elapsed time" FontSize="36"
                   HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="TimeTextBlock_MouseDown" />
    </Grid>
</Window>